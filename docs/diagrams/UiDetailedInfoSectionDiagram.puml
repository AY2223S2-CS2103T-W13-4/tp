@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow

Class DetailedInfoSection
Class DetailedContent
Class HeaderBar

Class WelcomeContent
Class ProfileContent
Class GeneralHomeworkContent
Class GeneralLessonContent
Class GeneralExamContent

Class EmptyHomeworkContent
Class EmptyLessonsContent
Class EmptyExamsContent
Class FilledHomeworkContent
Class FilledLessonsContent
Class FilledExamsContent
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui


UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
DetailedInfoSection *-down-> "1" HeaderBar
DetailedInfoSection *-down-> "1" DetailedContent
MainWindow *-down-> "1" DetailedInfoSection

MainWindow -left-|> UiPart
DetailedInfoSection --|> UiPart
HeaderBar --|> UiPart
DetailedContent --|> UiPart

DetailedInfoSection ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic
WelcomeContent -up-|> DetailedContent
ProfileContent -up-|> DetailedContent
GeneralHomeworkContent -up-|> DetailedContent
GeneralLessonContent -up-|> DetailedContent
GeneralExamContent -up-|> DetailedContent
EmptyExamsContent -up-|> GeneralExamContent
EmptyHomeworkContent -up-|> GeneralHomeworkContent
EmptyLessonsContent -up-|> GeneralLessonContent
FilledExamsContent -up-|> GeneralExamContent
FilledHomeworkContent -up-|> GeneralHomeworkContent
FilledLessonsContent -up-|> GeneralLessonContent

MainWindow -[hidden]-|> UiPart
@enduml
